<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controladores.AddMovieActivity"
        android:background="@color/colorBackGround">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:id="@+id/search"
            android:gravity="center"
            android:hint="@string/search"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textColorLink="@color/colorText"
            android:textColorHighlight="@color/colorText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="@string/search"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/but_search"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/rounder_corner_button"
            android:ems="10"
            app:layout_constraintStart_toEndOf="@+id/search"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="buscarPelicula"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="610dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/listMoviesSearch"
            android:clickable="true"
            android:scrollbars="vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/search"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>